-# frozen_string_literal: true
= simple_form_for(@expence) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :amount
    = f.input :description
    = f.input :date
    = f.input :category_id
    = f.input :payment_mode_id
    = f.input :inword
    = f.input :invoice
    = f.input :user_id

  .form-actions
    = f.button :submit
